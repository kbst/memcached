{
	"variables": [
		{
			"path": "$.items[?(@.kind == 'Memcached')].metadata.name",
			"type": "text",
			"prefix": "memc-",
			"title": "name your memcached cluster"
		},
		{
			"path": "$.items[?(@.kind == 'Memcached')].metadata.namespace",
			"type": "text",
			"value": "default",
			"title": "namespace to deploy cluster in"
		},
		{
			"path": "$.items[?(@.kind == 'Memcached')].spec.memcached.replicas",
			"type": "number",
			"value": 2,
			"min": 2,
			"title": "# of replicas"
		},
		{
			"path": "$.items[?(@.kind == 'Memcached')].spec.memcached.memcached_limit_cpu",
			"type": "text",
			"value": "100m",
			"title": "# of CPU cores"
		},
		{
			"path": "$.items[?(@.kind == 'Memcached')].spec.memcached.memcached_limit_memory",
			"type": "text",
			"value": "64Mi",
			"title": "RAM per replica"
		}
	]
}
